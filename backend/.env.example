# Server Configuration
PORT=5000
NODE_ENV=development

# MySQL Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=portfolio_db
DB_PORT=3306

# CORS Configuration (Your frontend URL)
FRONTEND_URL=http://localhost:5173

# JWT Authentication - REQUIRED for Admin Login
# Generate secure random strings for production:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change_this_to_a_secure_random_string_minimum_32_characters

# Session Secret - REQUIRED for Admin Sessions
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=change_this_to_another_secure_random_string_minimum_32_characters
