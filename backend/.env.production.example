# ============================================================
# Portfolio Backend - Production Environment Configuration
# ============================================================
# IMPORTANT: Copy this to .env and fill with production values
# NEVER commit the actual .env file with real credentials
# ============================================================

# Server Configuration
NODE_ENV=production
PORT=5000

# MySQL Database Configuration - Use production database
DB_HOST=your-production-db-host.com
DB_USER=portfolio_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_MIN_16_CHARS
DB_NAME=portfolio_db
DB_PORT=3306

# CORS Configuration - Your production frontend URL
FRONTEND_URL=https://your-domain.com

# JWT Authentication - CRITICAL: Generate secure random strings
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_64_BYTE_HEX_STRING_HERE_DO_NOT_USE_THIS_PLACEHOLDER
JWT_EXPIRES_IN=7d

# Session Secret - CRITICAL: Generate secure random string
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=GENERATE_ANOTHER_64_BYTE_HEX_STRING_HERE_DO_NOT_USE_THIS

# Email Configuration - Production SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-app-specific-password-here

# Notification Email - Where contact form submissions are sent
NOTIFICATION_EMAIL=your-production-email@gmail.com

# Rate Limiting (Optional - defaults are secure)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CONTACT_RATE_LIMIT=3
LOGIN_RATE_LIMIT=5

# Security (Optional - defaults are secure)
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Logging (Optional)
LOG_LEVEL=info
